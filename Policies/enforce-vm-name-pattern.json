{
  "policyRule": {
     "if": {
      "allOf": [
        {
          "not": {
            "field": "name",
            "match": "[parameters('vmnamepattern')]"
          }
        },
        {
          "field": "type",
          "equals": "Microsoft.Compute/virtualMachines"
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {
    "vmnamepattern": {
      "type": "String",
      "metadata": {
        "displayName": "vmnamepattern",
        "description": "pattern to check for"
      }
    }
  },
  "metadata": {
    "category": "CUSTOM_TEST"
  }
}